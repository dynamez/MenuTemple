<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="horizontal"
    android:background="#666666">
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/foto"/>
    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name" android:text="Nombre del Producto"
            android:textSize="25dp"
            android:layout_width="wrap_content" android:layout_height="50dp"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"  android:layout_height="100dp"
            android:textColor="#FFF"
            android:text="Esta es una descripcion mas detallada del producto. Se mostrarán los ingredientes y la preparación"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precio"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$8.990"
        android:textSize="35sp"/>
</LinearLayout>